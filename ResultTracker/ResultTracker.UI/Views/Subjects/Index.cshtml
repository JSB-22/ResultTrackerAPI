@model IEnumerable<ResultTracker.UI.Models.Dto.SubjectDto>
@{
}
<h1 class="mt-3">Subjects</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Subjects" asp-action="Add">Add Subject</a>
</div>
<div></div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Subject</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var subject in Model)
			{
				<tr>
					<td>
						<b>@subject.ExamBoard : </b> @subject.Name
						<nav style="display: flex; justify-content:flex-end">
							<a class="btn btn-light" asp-controller="Subjects" asp-route-id="@subject.Id" asp-action="Edit">Edit</a>
							<a class="btn btn-danger">
								@using (Html.BeginForm("Delete", "Subjects", new { id = subject.Id }))
								{
									<input type="submit" class="bg-transparent border-0" value="Delete" onclick="return confirm('Are you sure you wish to delete the entry:?')" />
								}
							</a>
						</nav>
					</td>
				</tr>
			}
		}
	</tbody>
</table>