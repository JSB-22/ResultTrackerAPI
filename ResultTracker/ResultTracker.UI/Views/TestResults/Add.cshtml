@{
}

@model ResultTracker.UI.Models.Dto.AddTestResultViewModel

<form method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="PercentageResult" class="control-label"></label>
		<input asp-for="PercentageResult" class="form-control" />
		<span asp-validation-for="PercentageResult" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Notes" class="control-label"></label>
		<input asp-for="Notes" class="form-control" />
		<span asp-validation-for="Notes" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label class="form-label">Select Topic</label>
		<style>
			.field-validation-valid {
				display: none;
			}
		</style>
		<select id="input-request-type" class="form-control" asp-for="SelectedTopicId" asp-items="Model.TopicSelectList">
			<option value="" hidden disabled selected> -- Select a Topic --</option>
		</select>
		<span asp-validation-for="SelectedTopicId" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label class="form-label">Select Subject</label>
		<style>
			.field-validation-valid {
				display: none;
			}
		</style>
		<select id="input-request-type" class="form-control" asp-for="SelectedSubjectId" asp-items="Model.SubjectSelectList">
			<option value="" hidden disabled selected> -- Select a Subject --</option>
		</select>
		<span asp-validation-for="SelectedSubjectId" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label class="form-label">Select Student</label>
		<style>
			.field-validation-valid {
				display: none;
			}
		</style>
		<select id="input-request-type" class="form-control" asp-for="SelectedAccountId" asp-items="Model.AccountSelectList">
			<option value="" hidden disabled selected> -- Select a Student --</option>
		</select>
		<span asp-validation-for="SelectedAccountId" class="text-danger"></span>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
