@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p>@{
            var userRoles = Context.User.FindFirst("RoleClaim");
            string userRoleString = "";
            userRoleString = userRoles is null ?"" : userRoles.Value;
            var customClaim = Context.User.FindFirst("TokenClaim");
            string userClaimString = "";
            userClaimString = customClaim is null ? "" : customClaim.Value;
        }User is in @userRoleString has custom claim value: @userClaimString
    </p>
</div>
<form method="post">
	<div class="mt-3 d-flex justify-content-between">
		<button type="submit" asp-controller="Auth" asp-route-id="" asp-action="Logout" class="btn btn-danger">Logout</button>
	</div>
</form>

