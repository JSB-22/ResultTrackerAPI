@model ResultTracker.UI.Models.Dto.TopicDto
@{
}

<h1 class="mt-3">Edit Topic</h1>

@if (Model is not null)
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>
		<div class="mt-3">
			<label class="form-label">Year</label>
			<input type="text" class="form-control" asp-for="Year" />
		</div>

		<div class="mt-3 d-flex justify-content-between">
			<button type="submit" class="btn btn-primary">Save</button>
			<button type="submit" asp-controller="Topics" asp-route-id="@Model.Id" asp-action="Delete" class="btn btn-danger">Delete</button>
		</div>

	</form>
}