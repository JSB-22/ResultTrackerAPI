@model IEnumerable<ResultTracker.UI.Models.Dto.TopicDto>
@{
}
<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Topics" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th> </th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var topic in Model)
			{
				<tr>
					<td>@topic.Id</td>
					<td>@topic.Name</td>
					<td>
						<a class="btn btn-light" asp-controller="Topics" asp-route-id="@topic.Id" asp-action="Edit">Edit</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>