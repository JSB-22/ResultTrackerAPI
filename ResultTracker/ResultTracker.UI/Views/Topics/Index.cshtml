@model IEnumerable<ResultTracker.UI.Models.Dto.TopicDto>
@{
}
<h1 class="mt-3">Topics</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Topics" asp-action="Add">Add Topic</a>
</div>
<div></div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Topic</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var topic in Model)
			{
				<tr>
					<td>
					<b>Year @topic.Year : </b> @topic.Name
						<nav  style="display: flex; justify-content:flex-end">
							<a class="btn btn-light" asp-controller="Topics" asp-route-id="@topic.Id" asp-action="Edit">Edit</a>
							<a class="btn btn-danger">
								@using (Html.BeginForm("Delete", "Topics", new { id = topic.Id }))
								{
									<input type="submit" class="bg-transparent border-0" value="Delete" onclick="return confirm('Are you sure you wish to delete the entry:?')" />
								}
							</a>
						</nav>
					</td>
				</tr>
			}
		}
	</tbody>
</table>